  <h1>Program Review</h1>
  
  <div style="overflow: scroll; height: 1000px; margin-bottom: 24px;">
    <GridRow>
      <GridCol Span="8">
    <Dropdown Trigger="@(new Trigger[] { Trigger.Hover })" style="position: absolute;">
      <Overlay>
          <Menu>
                <!-- for each type of program ... submenu -->
                @foreach (var degree in allDegrees){
                  <SubMenu Title=@(degree.ID)>
                  <!-- for each specialty .. menuitem -->
                    @foreach (var program in degree.Programs) {
                    <SubMenu Title=@(program.ID)>
                      @foreach (var term in program.Terms) {
                        <MenuItem @onclick='() => AddTerms(program, term)' style="position: relative; bottom: 0;">
                        @term.TermLabel
                        </MenuItem>
                      }
                    </SubMenu>
                    }
                  </SubMenu>
                  }
          </Menu>
      </Overlay>
      <ChildContent>
        <Button Size="large" style="margin-top: 10px;">
          <a class="ant-dropdown-link" @onclick:preventDefault style="text-decoration: none;">
                Program of Study <Icon Type="down"/>
          </a>
          </Button>
      </ChildContent>
    </Dropdown>

    <img src="image/jellyfish.png" width="250" style="bottom: 0; opacity: 0.3; margin: 100px 0px 0px 20px;"/>

    </GridCol>
    
    <GridCol Span="16">
      <div style="overflow-wrap: break-word; padding: 10px; border: 1px solid #ececf2; border-radius: 15px; margin-top: 10px; min-height: 100vh; background-color: #ececf2;">
        <h3 style="color: rgb(69, 69, 70)"><center>Selected Terms</center></h3>
        @foreach (var term in addedTerms) {
          <Button Size="large" icon="close" @onclick="() => Delete(term)" style="margin: 20px 10px 20px 0px" />
          <b>@term.TermLabel</b>
          @foreach (var crs in term.Courses) {
            <Collapse>
              <Panel Header="@(crs.Course.ID + " " + crs.Course.Title)">
                <p>Skills for @crs.Course.ID</p>
                  @foreach (var skls in crs.Course.Outcomes) {
                  <p>@skls
                    <br/>
                  </p>
                  }
              </Panel>
            </Collapse>
          } 
        }
      </div>
    </GridCol>
    </GridRow>
  </div>

  
